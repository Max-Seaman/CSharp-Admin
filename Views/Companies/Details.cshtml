@model CSharp_Admin.Models.Company

@{
    ViewData["Title"] = "Companies | Details";
}

<div class="container-fluid py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">@Model.Name</h1>

        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">Edit</a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">Delete</a>
            <a asp-action="Index" class="btn btn-outline-secondary">Back to Companies</a>
        </div>
    </div>

    <!-- Company Info Card -->
    <div class="card mb-4 shadow-sm p-4">
        <div class="card-body px-2 d-flex align-items-center gap-3">
            @{ var logoUrl = !string.IsNullOrEmpty(Model.LogoPath) ? Url.Content("~/" + Model.LogoPath) : Url.Content("~/img/default-company.png"); }
            <img src="@logoUrl" alt="Logo" class="rounded me-4 company-logo" />

            <div>
                <p><strong>Email:</strong> 
                    @if (!string.IsNullOrEmpty(Model.Email))
                    {
                        <a href="mailto:@Model.Email">@Model.Email</a>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </p>

                <p><strong>Website:</strong> 
                    @if (!string.IsNullOrEmpty(Model.Website))
                    {
                        <a href="@Model.Website" target="_blank">@Model.Website</a>
                    }
                    else
                    {
                        <span class="text-muted">—</span>
                    }
                </p>

                <p class="mb-0"><strong>Total Employees:</strong> @(Model.Employees?.Count ?? 0)</p>
            </div>
        </div>
    </div>

    <!-- Employees Table -->
    <div class="card shadow-sm">
        <div class="card-header p-2">
            <strong>Employees</strong>
        </div>
        <div class="card-body p-0">
            @if (Model.Employees == null || !(Model.Employees?.Any() ?? false))
            {
                <p class="text-center py-4 text-muted mb-0">No employees for this company.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light text-center">
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var employee in Model.Employees)
                            {
                                <tr class="text-center">
                                    <td>@employee.FirstName @employee.LastName</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(employee.Email))
                                        {
                                            <a href="mailto:@employee.Email">@employee.Email</a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(employee.Phone))
                                        {
                                            @employee.Phone
                                        }
                                        else
                                        {
                                            <span class="text-muted">—</span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm">
                                            <a asp-controller="Employees" asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-outline-primary">Edit</a>
                                            <a asp-controller="Employees" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-outline-secondary">View</a>
                                            <a asp-controller="Employees" asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-outline-danger">Delete</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
