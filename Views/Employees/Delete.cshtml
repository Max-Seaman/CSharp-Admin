@model CSharp_Admin.Models.Employee

@{
    ViewData["Title"] = "Employees | Delete";
}


<div class="container-fluid py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">Delete Employee</h1>
            <p class="text-muted mb-0">Are you sure you want to delete this employee?</p>
        </div>

        <a asp-action="Index" class="btn btn-secondary">
            Back
        </a>
    </div>

    <div class="card shadow-sm">

        <div class="card-body">

            <div class="row g-3">

                <div class="col-md-6">
                    <label class="form-label">First Name</label>
                    <input class="form-control" value="@Model.FirstName" disabled />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Last Name</label>
                    <input class="form-control" value="@Model.LastName" disabled />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Email</label>
                    <input class="form-control" value="@Model.Email" disabled />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Phone</label>
                    <input class="form-control" value="@Model.Phone" disabled />
                </div>

                <div class="col-md-6">
                    <label class="form-label">Company</label>
                    <input class="form-control" value="@Model.Company?.Name" disabled />
                </div>

            </div>

        </div>

        <div class="card-footer d-flex justify-content-end gap-2">

            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>

            <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-danger">
                    Delete Employee
                </button>
            </form>

        </div>

    </div>

</div>