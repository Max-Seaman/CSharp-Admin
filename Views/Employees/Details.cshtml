@model CSharp_Admin.Models.Employee

@{
    ViewData["Title"] = "Employees | Details";
}


<div class="container-fluid py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-1">
                @Model.FirstName @Model.LastName
            </h1>
            <p class="text-muted mb-0">Employee details</p>
        </div>

        <div class="btn-group">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                Edit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                Delete
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                Back to Employees
            </a>
        </div>
    </div>

    <!-- Employee Information -->
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header">
                    Employee Information
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">First name</dt>
                        <dd class="col-sm-9">@Model.FirstName</dd>

                        <dt class="col-sm-3">Last name</dt>
                        <dd class="col-sm-9">@Model.LastName</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Email))
                            {
                                <a href="mailto:@Model.Email">@Model.Email</a>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Phone</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.Phone))
                            {
                                @Model.Phone
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Company</dt>
                        <dd class="col-sm-9">
                            @if (Model.Company != null)
                            {
                                <span class="text-dark">@Model.Company.Name</span>
                            }
                            else
                            {
                                <span class="text-muted">—</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

</div>
